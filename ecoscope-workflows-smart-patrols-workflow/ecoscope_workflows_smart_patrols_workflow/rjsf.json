{
  "properties": {
    "workflow_details": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "description": "The name of your workflow"
        },
        "description": {
          "title": "Description",
          "type": "string",
          "description": "A description"
        },
        "image_url": {
          "default": "",
          "title": "Image Url",
          "type": "string",
          "description": "An image url"
        }
      },
      "required": [
        "name",
        "description"
      ],
      "type": "object",
      "title": "Set Workflow Details"
    },
    "smart_client_name": {
      "additionalProperties": false,
      "properties": {
        "data_source": {
          "$ref": "#/$defs/SMARTConnection",
          "title": "Data Source",
          "description": "Select one of your configured data sources by name."
        }
      },
      "required": [
        "data_source"
      ],
      "type": "object",
      "title": "Select Smart Connection"
    },
    "groupers": {
      "additionalProperties": false,
      "properties": {
        "groupers": {
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/Grouper"
              },
              {
                "$ref": "#/$defs/TemporalGrouper"
              }
            ]
          },
          "title": "Groupers",
          "type": "array",
          "description": "            Index(es) and/or column(s) to group by, along with\n            optional display names and help text.\n            "
        }
      },
      "required": [
        "groupers"
      ],
      "type": "object",
      "title": "Set Groupers"
    },
    "time_range": {
      "additionalProperties": false,
      "properties": {
        "since": {
          "format": "date-time",
          "title": "Since",
          "type": "string",
          "description": "The start time"
        },
        "until": {
          "format": "date-time",
          "title": "Until",
          "type": "string",
          "description": "The end time"
        }
      },
      "required": [
        "since",
        "until"
      ],
      "type": "object",
      "title": "Set Time Range Filter"
    },
    "Fetch and preprocess patrol observations": {
      "type": "object",
      "description": "Fetch patrol observations from SMART, preprocess them into trajectories, and add a temporal index.",
      "properties": {
        "patrol_obs": {
          "additionalProperties": false,
          "properties": {
            "ca_uuid": {
              "title": "Ca Uuid",
              "type": "string",
              "description": "Conservation Area UUID"
            },
            "language_uuid": {
              "title": "Language Uuid",
              "type": "string",
              "description": "Language UUID"
            }
          },
          "required": [
            "ca_uuid",
            "language_uuid"
          ],
          "type": "object",
          "title": "Get Patrol Observations from SMART"
        },
        "patrol_traj": {
          "additionalProperties": false,
          "properties": {
            "max_length_meters": {
              "default": 10000,
              "title": "Max Length Meters",
              "type": "number"
            },
            "max_time_secs": {
              "default": 3600,
              "title": "Max Time Secs",
              "type": "number"
            },
            "max_speed_kmhr": {
              "default": 120,
              "title": "Max Speed Kmhr",
              "type": "number"
            }
          },
          "required": [],
          "type": "object",
          "title": "Transform Relocations to Trajectories"
        }
      },
      "uiSchema": {
        "ui:order": [
          "patrol_obs",
          "patrol_traj"
        ]
      }
    },
    "Fetch and preprocess patrol events": {
      "type": "object",
      "description": "Fetch patrol events from SMART, filter them, and add a temporal index.",
      "properties": {
        "patrol_events": {
          "additionalProperties": false,
          "properties": {
            "ca_uuid": {
              "title": "Ca Uuid",
              "type": "string",
              "description": "Conservation Area UUID"
            },
            "language_uuid": {
              "title": "Language Uuid",
              "type": "string",
              "description": "Language UUID"
            }
          },
          "required": [
            "ca_uuid",
            "language_uuid"
          ],
          "type": "object",
          "title": "Get Patrol Events from SMART"
        }
      },
      "uiSchema": {
        "ui:order": [
          "patrol_events"
        ]
      }
    },
    "Patrol events bar chart": {
      "type": "object",
      "description": "Create the patrol events bar chart.",
      "properties": {
        "patrol_events_bar_chart": {
          "additionalProperties": false,
          "properties": {
            "time_interval": {
              "enum": [
                "year",
                "month",
                "week",
                "day",
                "hour"
              ],
              "title": "Time Interval",
              "type": "string",
              "description": "Sets the time interval of the x axis."
            }
          },
          "required": [
            "time_interval"
          ],
          "type": "object",
          "title": "Draw Time Series Bar Chart for Patrols Events"
        }
      },
      "uiSchema": {
        "ui:order": [
          "patrol_events_bar_chart"
        ]
      }
    },
    "Time Density Map": {
      "type": "object",
      "description": "Calculate time density from patrol trajectories and display it on a map.",
      "properties": {
        "td": {
          "additionalProperties": false,
          "properties": {
            "pixel_size": {
              "default": 250.0,
              "title": "Pixel Size",
              "type": "number",
              "description": "Raster pixel size in meters."
            }
          },
          "required": [],
          "type": "object",
          "title": "Calculate Time Density from Trajectory"
        }
      },
      "uiSchema": {
        "ui:order": [
          "td"
        ]
      }
    }
  },
  "$defs": {
    "SMARTConnection": {
      "properties": {
        "name": {
          "title": "Connection Name",
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "title": "SMARTConnection",
      "type": "object"
    },
    "Grouper": {
      "properties": {
        "index_name": {
          "title": "Index Name",
          "type": "string"
        }
      },
      "required": [
        "index_name"
      ],
      "title": "Grouper",
      "type": "object"
    },
    "TemporalGrouper": {
      "properties": {
        "temporal_index": {
          "oneOf": [
            {
              "const": "%Y",
              "title": "Year (example: 2024)"
            },
            {
              "const": "%B",
              "title": "Month (example: September)"
            },
            {
              "const": "%j",
              "title": "Day of the year as a number (example: 365)"
            },
            {
              "const": "%d",
              "title": "Day of the month as a number (example: 31)"
            },
            {
              "const": "%A",
              "title": "Day of the week (example: Sunday)"
            },
            {
              "const": "%H",
              "title": "Hour (24-hour clock) as number (example: 22)"
            }
          ],
          "title": "Temporal Index",
          "type": "string"
        }
      },
      "required": [
        "temporal_index"
      ],
      "title": "TemporalGrouper",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "uiSchema": {
    "ui:order": [
      "workflow_details",
      "smart_client_name",
      "groupers",
      "time_range",
      "Fetch and preprocess patrol observations",
      "Fetch and preprocess patrol events",
      "Patrol events bar chart",
      "Time Density Map"
    ]
  }
}
